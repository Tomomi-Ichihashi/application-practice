       <% if user_signed_in? %>
         <% if book.favorited_by?(current_user) %>
           <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
            <span style="color: red"><i class="fas fa-heart"></i><%= book.favorites.count %></span>
           <% end %>
         <% else %>
           <%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
            <span style="color: blue"><i class="fas fa-heart"></i><%= book.favorites.count %></span>
           <% end %>
         <% end %>
        <% end %>